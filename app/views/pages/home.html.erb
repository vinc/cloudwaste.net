<div class="container py-2">
  <section id="home">
    <div class="d-flex flex-column text-center flex-sm-row text-sm-start justify-content-sm-between">
      <h2 class="fw-bold"><%= link_to "CloudWaste", root_path, class: "text-primary-gradient" %></h2>
      <!--<button class="btn btn-outline-primary mt-3 mt-sm-0" type="submit">Login</button>-->
    </div>

    <div class="col-lg-8 col-md-10 mx-auto mt-2">
      <div class="text-center">
        <svg class="mb-4" xmlns="http://www.w3.org/2000/svg" width="128" height="128" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-cloud-sun"><path d="M12 2v2"/><path d="m4.93 4.93 1.41 1.41"/><path d="M20 12h2"/><path d="m19.07 4.93-1.41 1.41"/><path d="M15.947 12.65a4 4 0 0 0-5.925-4.128"/><path d="M13 22H7a5 5 0 1 1 4.9-6H13a3 3 0 0 1 0 6Z"/></svg>

        <h1 class="display-3 fw-bold">
          Stop cloud waste<br>
          <span class="text-primary">Start saving today</span>
        </h1>

        <div class="text-center col-lg-10 col-md-10 mx-auto mt-5">
          <form action="/join" method="post">
            <div class="row g-3">
              <div class="col-8">
                <input type="email" class="form-control form-control-lg" id="email" name="email" placeholder="Email" value="">
              </div>
              <div class="col-4">
                <button type="submit" class="form-control btn btn-lg btn-primary">Join waitlist</button>
              </div>
            </div>
          </form>
        </div>
      </div>

      <hr class="my-5 opacity-0">

      <div class="row lead fw-normal mt-5">
        <div class="col">
          <div class="text-center mb-3">
            <svg class="text-primary" xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-zoom-in"><circle cx="11" cy="11" r="8"/><line x1="21" x2="16.65" y1="21" y2="16.65"/><line x1="11" x2="11" y1="8" y2="14"/><line x1="8" x2="14" y1="11" y2="11"/></svg>
